<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<% resource_title = strip_html(strip_newlines(title)) %>
<% resource_tagline = strip_html(strip_newlines(tagline || metadata.tagline)) %>
<title><%= resource_title %> | <%= resource_tagline %></title>

<% resource_description = strip_html(strip_newlines(description || metadata.description)) %>
<meta name="description" content="<%= resource_description %>" />

<meta content="<%= resource_title %>" property="og:title">
<meta content="Website" property="og:type">
<meta content="<%= absolute_url(image) %>" property="og:image">
<meta content="<%= absolute_url(page.relative_url) %>" property="og:url">
<meta content="<%= title %>" property="og:site_name">
<meta content="<%= resource_description %>" property="og:description">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@mario_chavez">
<meta name="twitter:title" content="<%= resource_title %>">
<meta name="twitter:description" content="<%= resource_description %>">
<meta name="twitter:image" content="<%= absolute_url(image) %>">

<link rel="shortcut icon" href="/favicon.ico" type-"image/x-icon" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
<link rel="manifest" href="/site.webmanifest">
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
<meta name="msapplication-TileColor" content="#ffc40d">
<meta name="theme-color" content="#ffffff">

<link rel="stylesheet" href="<%= asset_path :css %>" />
<script src="<%= asset_path :js %>" defer></script>
<%= live_reload_dev_js %>
